#!/bin/sh

export XAUTHORITY=/run/user/1000/gdm/Xauthority
export DISPLAY=:0
export DBUS_SESSION_BUS_ADDRESS="unix:path=/run/user/1000/bus"
XDG_RUNTIME_DIR=/run/user/1000


su $USER -p XAUTHORITY,DISPLAY,XDG_RUNTIME_DIR,DBUS_SESSION_BUS_ADDRESS -c 'notify-send -a hp_wmi "Battery" "Charging"' 2>> /tmp/notify-send-error.log
systemctl start Omenhsaclient.timer
